<c:if test="${!thread.locked}">
	<h2>Post a reply</h2>

	<form action="createPost" method="post">
		<table>
			<tr>
				<td>Reply:</td>
				<td><textarea name="post" rows="10" cols="50"></textarea></td>
			</tr>
			<tr>
				<td><input type="hidden" name="thread" value="${thread.id}" /></td>
				<td><input type="submit" value="Reply" /></td>
			</tr>
		</table>
	</form>
</c:if>